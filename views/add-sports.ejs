<html>
    <head><h1>Add Sports</h1></head>
    <body style="text-align: center;">
        <form method="POST">
            <p>
                <label>
                    Title
                    <input type="text" placeholder="title" name="stitle"/>
                </label>
            </p>
            <p>
                <label>
                    Description
                    <textarea type="text" placeholder="description" name="sdescription"></textarea>
                </label>
            </p>
            <p>
                <label>
                    Url
                    <input type="url" placeholder="url" name="surl"/>
                </label>
            </p>
            
            <p>
                <label>
                    Url to image
                    <input type="url" placeholder="urltoimage" name="surltoimage"/>
                </label>
            </p>

            <br>
            <button type="submit">ADD</button><button type="reset">RESET</button>
        </form>
    </body>
